{
    "name": "ts-poc-api",
    "version": "1.0.0",
    "description": "TS POC API",
    "main": "index.js",
    "scripts": {
        "ts-compile": "tsc -p .",
        "ts-compile-watch": "npm run ts-compile -- -w",
        "ts-lint": "tslint -p . -c tslint.json",
        "ts-build": "npm run ts-compile && npm run ts-lint",
        "create-db-server": "docker run --name tspoc-postgres -p 5432:5432 -e POSTGRES_PASSWORD=p@ssw0rd -d postgres:10.5 && sleep 5",
        "create-db": "docker run -it --rm -e PGPASSWORD=p@ssw0rd postgres:10.5 psql -h 172.17.0.1 -U postgres -c \"create database tspocdb;\"",
        "precreate-db-tables": "npm run ts-build",
        "create-db-tables": "node ./src/data/db-script.js",
        "db-start": "npm run create-db-server && npm run create-db && npm run create-db-tables",
        "db-stop": "docker stop tspoc-postgres && docker rm tspoc-postgres",
        "nodemon": "nodemon --ignore client/ --ignore test/ --inspect=4001 ./src/api/server.js",
        "predev": "npm run ts-build",
        "dev": "concurrently \"npm:ts-compile-watch\" \"npm:nodemon\"",
        "pretest": "npm run ts-build",
        "test": "mocha --timeout 7200000 --reporter spec --ui tdd --require ts-node/register \"./test/**/*.test.js\" || true",
        "build": "env=prod npm run ts-build",
        "start": "node ./src/api/server.js env=prod",
        "clean-src": "find ./src -name \"*.js\" -delete -o -name \"*.map\" -delete -o -name \"*.css\" -delete",
        "clean-test": "find ./test -name \"*.js\" -delete -o -name \"*.map\" -delete"
    },
    "author": "NiviN",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^4.1.0",
        "nodemon": "^1.18.7"
    },
    "dependencies": {
        "@nivinjoseph/n-config": "^1.0.20",
        "@nivinjoseph/n-data": "^2.0.1",
        "@nivinjoseph/n-defensive": "^1.0.20",
        "@nivinjoseph/n-domain": "^1.0.19",
        "@nivinjoseph/n-exception": "^1.0.15",
        "@nivinjoseph/n-ext": "^1.0.32",
        "@nivinjoseph/n-ject": "^1.0.22",
        "@nivinjoseph/n-log": "^1.0.5",
        "@nivinjoseph/n-sec": "^2.0.23",
        "@nivinjoseph/n-util": "^1.0.19",
        "@nivinjoseph/n-validate": "^1.0.13",
        "@nivinjoseph/n-web": "^3.0.3",
        "@types/mocha": "^5.2.5",
        "@types/node": "^8.10.21",
        "mocha": "^5.2.0",
        "moment": "^2.22.2",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.1.1"
    }
}
